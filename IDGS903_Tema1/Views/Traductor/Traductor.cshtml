@model IDGS903_Tema1.Models.Traductor

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Traductor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Opcion, "English") Inglés
                @Html.RadioButtonFor(model => model.Opcion, "Spanish") Español
            </div>
        </div>

        <div class="form-group mt-4">
            @Html.LabelFor(model => model.Palabra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Palabra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Palabra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-4">
                <input type="submit" value="Traducir" class="btn btn-danger" />
            </div>
        </div>
        <h3 class="mt-4">Traducción:</h3>
        <br />
        <h4>@TempData["Resultado"]</h4>
    </div>
}
