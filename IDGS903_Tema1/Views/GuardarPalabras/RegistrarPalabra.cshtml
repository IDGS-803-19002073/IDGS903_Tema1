@model IDGS903_Tema1.Models.GuardarPalabras

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Registrar          Palabras</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ingles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ingles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ingles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.espagnol, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.espagnol, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.espagnol, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="mt-2 col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>

            <div class="col-md-offset-2 col-md-4 mt-4 ">
                <a href="~/GuardarPalabras/MostrarDiccionario" type="button" class=" btn btn-warning text-white"> Mostrar </a>
            </div>
      
    </div>
    </div>
}
